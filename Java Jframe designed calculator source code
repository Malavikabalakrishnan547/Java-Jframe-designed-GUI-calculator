    private void jButton22MouseClicked(java.awt.event.MouseEvent evt) {                                       
 if(!(txtResult.getText().isEmpty())){
        operator = "plus";
        txtResult.setText(txtResult.getText()+ "+");
        }        // TODO add your handling code here:
    }                                      

