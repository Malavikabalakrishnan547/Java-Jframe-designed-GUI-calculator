    private void jButton16MouseClicked(java.awt.event.MouseEvent evt) {                                       
  if(txtResult.getText().isEmpty())
        {
            txtResult.setText(jButton16.getText());
            value1 = 1;
        } else {
            txtResult.setText(txtResult.getText()+ ""+ jButton16.getText());
            value2 = 1;
        }
              // TODO add your handling code here:
    }                                      

    private void jButton10MouseClicked(java.awt.event.MouseEvent evt) {                                       
   if(txtResult.getText().isEmpty())
        {
            txtResult.setText(jButton10.getText());
            value1 = 2; 
        }else {
            txtResult.setText(txtResult.getText()+ ""+ jButton10.getText());
            value2 = 2;
        }
         
    }                                      

